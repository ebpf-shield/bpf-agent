    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug firewall",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/debug_firewall",
            "asRoot": true,
            "console": "integratedTerminal",
            "showGlobalVariables": true,
            "preLaunchTask": "go: generate & build firewall (debug)"
        },
        {
            "name": "Attach to eBPF",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "asRoot": true
        }
    ]
}